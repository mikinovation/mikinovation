{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every day"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "description": "Add rust label to Rust package updates",
      "matchManagers": [
        "cargo"
      ],
      "addLabels": [
        "rust"
      ]
    },
    {
      "description": "Add javascript label to JavaScript package updates",
      "matchManagers": [
        "npm"
      ],
      "addLabels": [
        "javascript"
      ]
    },
    {
      "description": "Group TypeScript type definitions with their packages",
      "matchPackagePatterns": [
        "^@types/"
      ],
      "matchPackageNames": [],
      "groupName": null,
      "groupSlug": null,
      "packagePatternGroups": [
        "^@types/(.*)",
        "^$1$"
      ]
    }
  ],
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/target/**",
    "**/dist/**",
    "**/.nuxt/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on monday"
    ]
  }
}
